<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/bg"
             tools:context=".Profile">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <AbsoluteLayout android:layout_width="match_parent" android:layout_height="match_parent"
                            android:orientation="vertical">
                <TextView
                        android:text="Availibility"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView5"
                        android:textColor="#b0b0b0" android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="40dp"
                        app:layout_constraintHorizontal_bias="0.025" android:layout_y="32dp" android:layout_x="30dp"/>

                <TextView
                        android:text="Are you available ?"
                        android:layout_width="309dp"
                        android:layout_height="43dp" android:id="@+id/textView6"
                        android:padding="5dp"
                        android:elevation="5dp"
                        android:textColor="@color/colorPrimaryDark" android:textSize="15sp"
                        android:layout_marginTop="15dp" app:layout_constraintTop_toBottomOf="@+id/textView5"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
                        app:layout_constraintHorizontal_bias="0.032" android:gravity="fill_vertical"
                        android:paddingStart="10dp" android:background="@drawable/bg1" android:layout_y="80dp"
                        android:layout_x="33dp"/>
                <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/switch1"
                        android:theme="@style/myswitch"
                        android:elevation="5dp"
                        app:layout_constraintStart_toStartOf="@+id/textView6" android:layout_marginStart="8dp"
                        tools:ignore="MissingConstraints"
                        app:layout_constraintEnd_toEndOf="@+id/textView6" android:layout_marginEnd="8dp"
                        app:layout_constraintHorizontal_bias="0.948" tools:layout_editor_absoluteY="89dp"
                        android:layout_y="89dp" android:layout_x="295dp"/>
                <TextView
                        android:text="Buggy Information"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView7"
                        android:textColor="#b0b0b0" android:textSize="18sp" android:layout_x="30dp"
                        android:layout_y="158dp"/>
                <LinearLayout
                        android:layout_width="309dp"
                        android:layout_x="33dp"
                        android:layout_y="198dp"
                        android:elevation="5dp"
                        android:background="@drawable/bg1"
                        android:orientation="vertical"
                        android:layout_height="match_parent" android:paddingLeft="10dp" android:paddingTop="5dp">

                    <Button
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="260dp"
                            android:background="@drawable/ic_edit_black_24dp"
                            android:id="@+id/Btn"
                    />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BUGGY NUMBER"
                            android:textSize="15sp"
                    />
                    <TextView
                            android:layout_width="309dp"
                            android:textSize="18sp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="normal"
                            android:hint="xx 0x xx xxxx"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content" android:id="@+id/bgyno"
                            android:capitalize="characters"/>

                    <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#a0a0a0"
                            android:layout_marginTop="5dp"
                    ></android.support.v7.widget.CardView>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BUGGY NAME"
                            android:layout_marginTop="5dp"
                            android:textSize="15sp"
                    />
                    <TextView
                            android:layout_width="309dp"
                            android:textSize="18sp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="normal"
                            android:layout_marginTop="5dp"
                            android:hint="Suzuki"
                            android:layout_height="wrap_content" android:id="@+id/bgyname" android:capitalize="words"/>


                    <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#a0a0a0"
                            android:layout_marginTop="5dp"
                    ></android.support.v7.widget.CardView>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NUMBER OF SEAT"
                            android:layout_marginTop="5dp"
                            android:textSize="15sp"
                    />
                    <TextView
                            android:layout_width="309dp"
                            android:textSize="18sp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="normal"
                            android:hint="04"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content" android:id="@+id/bgysheet"/>

                </LinearLayout>

                <TextView
                        android:text="Personal Profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#b0b0b0" android:textSize="18sp" android:layout_x="38dp"
                        android:layout_y="460dp"></TextView>

                <LinearLayout
                        android:layout_width="309dp"
                        android:layout_x="33dp"
                        android:layout_y="495dp"
                        android:background="@drawable/bg1"
                        android:elevation="5dp"
                        android:orientation="vertical"
                        android:layout_height="match_parent" android:paddingLeft="10dp">


                    <Button
                            android:id="@+id/Btn1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="260dp"
                            android:background="@drawable/ic_edit_black_24dp" />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DRIVER ID"
                            android:layout_marginTop="5dp"
                            android:textSize="15sp"
                    />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="bold"
                            android:layout_marginTop="5dp"
                            android:textSize="15sp"
                            android:id="@+id/did" android:ellipsize="end" android:ems="10" android:hint="Dri.ID"/>


                    <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#a0a0a0"
                            android:layout_marginTop="5dp"
                    ></android.support.v7.widget.CardView>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="FIRST NAME"
                            android:layout_marginTop="5dp"
                            android:textSize="15sp"
                    />
                    <TextView
                            android:layout_width="309dp"
                            android:textSize="18sp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="normal"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content" android:id="@+id/dfnme"
                            android:capitalize="characters" android:hint="YOUR NAME"/>


                    <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#a0a0a0"
                            android:layout_marginTop="5dp"
                    ></android.support.v7.widget.CardView>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LAST NAME"
                            android:layout_marginTop="5dp"
                            android:textSize="15sp"
                    />
                    <TextView
                            android:layout_width="309dp"
                            android:textSize="18sp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="normal"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content" android:id="@+id/dlnme"
                            android:capitalize="characters" android:hint="SURNAME"/>


                    <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#a0a0a0"
                    ></android.support.v7.widget.CardView>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MOBILE NUMBER"
                            android:layout_marginTop="5dp"
                            android:textSize="15sp"
                    />
                    <TextView
                            android:layout_width="309dp"
                            android:textSize="18sp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="normal"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content" android:id="@+id/mobileno"
                            android:hapticFeedbackEnabled="false" android:hint="XXX-XXX-XXXX"/>


                    <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#a0a0a0"
                            android:layout_marginTop="5dp"
                    ></android.support.v7.widget.CardView>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ADDRESS"
                            android:layout_marginTop="5dp"
                            android:textSize="15sp"
                    />
                    <TextView
                            android:layout_width="309dp"
                            android:textSize="18sp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="normal"
                            android:hint="ADDRESS"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content"  android:id="@+id/address"/>


                    <TextView android:layout_width="10dp"
                              android:layout_height="70dp"/>
                </LinearLayout>


            </AbsoluteLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.constraint.ConstraintLayout>
</FrameLayout>