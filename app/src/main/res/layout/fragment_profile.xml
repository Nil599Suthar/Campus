<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/bg"
             tools:context=".Profile">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <AbsoluteLayout android:layout_width="match_parent" android:layout_height="match_parent"
                            android:orientation="vertical">
                <TextView
                        android:text="Availibility"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView5"
                        android:textColor="@color/colorPrimaryDark" android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="40dp"
                        app:layout_constraintHorizontal_bias="0.025" android:layout_y="32dp" android:layout_x="30dp"/>

                <TextView
                        android:text="Are you available?"
                        android:layout_width="309dp"
                        android:layout_height="43dp" android:id="@+id/textView6"
                        android:textColor="@color/colorPrimaryDark" android:textSize="18sp" android:textStyle="bold"
                        android:layout_marginTop="15dp" app:layout_constraintTop_toBottomOf="@+id/textView5"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
                        app:layout_constraintHorizontal_bias="0.032" android:gravity="fill_vertical"
                        android:paddingStart="10dp" android:background="@drawable/bg1" android:layout_y="80dp"
                        android:layout_x="33dp"/>
                <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/switch1"
                        android:theme="@style/myswitch"

                        app:layout_constraintStart_toStartOf="@+id/textView6" android:layout_marginStart="8dp"
                        tools:ignore="MissingConstraints"
                        app:layout_constraintEnd_toEndOf="@+id/textView6" android:layout_marginEnd="8dp"
                        app:layout_constraintHorizontal_bias="0.948" tools:layout_editor_absoluteY="89dp"
                        android:layout_y="89dp" android:layout_x="295dp"/>
                <TextView
                        android:text="Buggy Information"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView7"
                        android:textColor="@color/colorPrimaryDark" android:textSize="18sp" android:layout_x="30dp"
                        android:layout_y="158dp"/>
                <LinearLayout
                        android:layout_width="309dp"
                        android:layout_x="33dp"
                        android:layout_y="198dp"
                        android:background="@drawable/bg1"
                        android:orientation="vertical"
                        android:layout_height="match_parent" android:paddingLeft="10dp" android:paddingTop="5dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BUGGY NUMBER"
                            android:textSize="15sp"
                    />
                    <TextView
                            android:layout_width="309dp"
                            android:textSize="18sp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="normal"
                            android:hint="xx 0x xx xxxx"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content" android:id="@+id/bgyno"
                            android:capitalize="characters"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BUGGY NAME"
                            android:layout_marginTop="5dp"
                            android:textSize="15sp"
                    />
                    <TextView
                            android:layout_width="309dp"
                            android:textSize="18sp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="normal"
                            android:layout_marginTop="5dp"
                            android:hint="Suzuki"
                            android:layout_height="wrap_content" android:id="@+id/bgyname" android:capitalize="words"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NUMBER OF SEAT"
                            android:layout_marginTop="5dp"
                            android:textSize="15sp"
                    />
                    <TextView
                            android:layout_width="309dp"
                            android:textSize="18sp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="normal"
                            android:hint="04"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content" android:id="@+id/bgysheet"/>
                    <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="UPDATE" android:background="@drawable/bg"
                            android:textSize="18sp" android:textStyle="bold"
                            android:textColor="@android:color/background_light"
                            android:id="@+id/Btn" android:layout_marginLeft="200dp"
                            android:layout_marginTop="5dp" android:layout_marginBottom="5dp"/>
                </LinearLayout>

                <TextView
                        android:text="Personal Profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryDark" android:textSize="18sp" android:layout_x="38dp"
                        android:layout_y="460dp"/>

                <LinearLayout
                        android:layout_width="309dp"
                        android:layout_x="33dp"
                        android:layout_y="495dp"
                        android:background="@drawable/bg1"
                        android:orientation="vertical"
                        android:layout_height="match_parent" android:paddingLeft="10dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Driver ID"
                            android:layout_marginTop="5dp"
                            android:textSize="15sp"
                    />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="bold"
                            android:layout_marginTop="5dp"
                            android:textSize="15sp"
                            android:id="@+id/did" android:ellipsize="end" android:ems="10" android:hint="Did"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="FIRST NAME"
                            android:layout_marginTop="5dp"
                            android:textSize="15sp"
                    />
                    <TextView
                            android:layout_width="309dp"
                            android:textSize="18sp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="normal"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content" android:id="@+id/dfnme"
                            android:capitalize="characters" android:hint="name "/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LAST NAME"
                            android:layout_marginTop="5dp"
                            android:textSize="15sp"
                    />
                    <TextView
                            android:layout_width="309dp"
                            android:textSize="18sp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="normal"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content" android:id="@+id/dlnme"
                            android:capitalize="characters" android:hint="surname"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mobile Nubmer"
                            android:layout_marginTop="5dp"
                            android:textSize="15sp"
                    />
                    <TextView
                            android:layout_width="309dp"
                            android:textSize="18sp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="normal"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content" android:id="@+id/mobileno"
                            android:hapticFeedbackEnabled="false" android:hint="xxxxxxxxxx"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Address"
                            android:layout_marginTop="5dp"
                            android:textSize="15sp"
                    />
                    <TextView
                            android:layout_width="309dp"
                            android:textSize="18sp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="normal"
                            android:hint="address"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content"  android:id="@+id/address"/>

                    <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="UPDATE" android:background="@drawable/bg"
                            android:textSize="18sp" android:textStyle="bold"
                            android:textColor="@android:color/background_light"
                            android:id="@+id/Btn1" android:layout_marginLeft="200dp" android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"/>

                </LinearLayout>

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textSize="18sp"
                          android:textStyle="bold"
                          android:layout_x="150dp" android:layout_y="960dp"/>

            </AbsoluteLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.constraint.ConstraintLayout>
</FrameLayout>